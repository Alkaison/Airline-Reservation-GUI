MDScreen:
    name: "profile"
    MDFloatLayout :
        orientation: 'vertical'
        size_hint: None,None
        # size: 480,600
        width:'300sp'
        height:'900sp'
        pos_hint: {"x":0} # pos_hint use for div
        md_bg_color: 50/255, 80/255, 200/255 ,1
        eveliation: 15
        padding: 10
        spacing: 15

        MDBoxLayout:
            mode: 'rectangle'
            theme_text_color:1,0,0,1
            size_hint: None,None
            width: '180sp'
            height: '180sp'
            radius: 100
            md_bg_color: 0/255, 185/255, 0/255 ,1
            pos_hint:{'top':.96,'x':.20}
            
        MDLabel:
            text:"User Name"
            size_hint: None,None
            size_hint: 1,0.5 # set width,height for customizing
            font_size: 20
            halign: 'center'
            pos_hint:{'top':.99}
            # set text color
            theme_text_color:"Custom"
            text_color:(205/255.0,100/255.0,200/255.0,1)
        # line after user photo
        MDLabel:
            size_hint: None,None
            size_hint: 1,.001
            md_bg_color: 1,0,0,1
            pos_hint:{'top':.71}
        
        MDTextButton:
            # mode:'rectangle'
