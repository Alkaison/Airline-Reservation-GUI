MDScreen:
    name: 'user booking cancel screen'
    md_bg_color: 'white'
    MDScrollView:
        MDBoxLayout:
            size_hint_x: 1
            adaptive_height: True
            orientation: 'vertical'
            padding: 0, 40

            # Heading
            MDFloatLayout:
                size_hint_x: 1
                adaptive_height: True
                md_bg_color: 'lightblue'
                MDIconButton:
                    icon: 'arrow-left'
                    pos_hint: {'x': .03, 'center_y': .5}
                    on_release: app.userscreenchanger('back - home')
                MDLabel:
                    id: user_booking_cancel_heading
                    text: 'Cancel Booking'
                    halign: 'center'
                    font_size: 30
                    pos_hint: {'center_x': .5, 'center_y': .5}
                
            MDBoxLayout:
                orientation: 'vertical'
                adaptive_height: True
                size_hint_x: 1
                padding: [20, 20]
                spacing: 30
                MDTextField:
                    id: user_booking_cancel_pin
                    mode: 'rectangle'
                    icon_left: 'dialpad'
                    password: True
                    hint_text: 'Enter your PIN to confirm'
                    helper_text_mode: 'on_error'
                    mode: 'rectangle'
                    line_color_normal: 'lightblue'
                    line_color_focus: 'blue'
                    pos_hint: {'x': .2}
                    adaptive_height: True
                    size_hint_x: .6
                    padding: 10, 0
                    text_color_focus: 'black'
                    # on_text : app.strvalidator('user wallet', 'pin', [self, update_wallet_upi_paybtn])
                MDRectangleFlatIconButton:
                    id: user_booking_cancel_button
                    text: 'Confirm and Cancel'
                    disabled: True
                    font_size: 20
                    adaptive_height: True
                    pos_hint: {'center_x': .5}
                    icon: 'fast-forward'
                    md_bg_color: 'blue'
                    text_color: 'white'
                    icon_color: 'white'
                    # on_release: app.validate('update wallet upi', [self, update_wallet_upi_pin, update_wallet_upi_amount])

    NotificationBox:
        id: user_booking_cancel_notification_box
        NotificationText:
            id: user_booking_cancel_notification_text
            text: ''
            color: 'white'
            halign: 'center'
            adaptive_height: True
            opacity: 1
            elevation: 100
