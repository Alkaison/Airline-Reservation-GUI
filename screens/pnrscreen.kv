# PNR Screen
MDScreen:
    name: 'pnr screen'

    MDScrollView:
        MDBoxLayout:
            orientation: 'vertical'
            adaptive_height: True
            pos_hint: {'top': .8, 'center_x': .5}
            padding: 30
            spacing: 50

            MDRectangleFlatButton:
                text: 'Go back to Home'
                ripple_scale: .8
                line_color: 'white'
                text_color: 'white'
                pos_hint: {'x':.1, 'top': .8}
                on_release: app.homescreenchanger('home screen')

            MDBoxLayout: 
                orientation: 'vertical'
                elevation: 5
                pos_hint: {'center_x':.5, 'top': .6}
                adaptive_height: True
                size_hint_x: .6
                line_color: 'white'
                radius: [10,]
                padding: 20
                spacing: 20
                
                MDTextField:
                    id: pnr_number
                    icon_left: 'ticket-confirmation-outline'
                    hint_text: 'Enter your PNR number'
                    helper_text_mode: 'on_error'
                    mode: 'rectangle'
                    line_color_normal: 'skyblue'
                    line_color_focus: 'skyblue'
                    pos_hint: {'center_x': 0.5}
                    adaptive_height: True
                    size_hint_x: .8
                    padding: 10, 0
                    text_color_focus: 'black'
                    on_text: app.strvalidator('pnr', 'pnr', [self, False])

                MDFlatButton:
                    text: 'Check'
                    md_bg_color: 'lightblue'
                    ripple_scale: .8
                    pos_hint: {'center_x': 0.5}
                    on_release: app.validate('pnr', [pnr_number, True])
            
            # Outer box showing all bookings with the PNR
            MDBoxLayout: 
                id: pnr_details_box
                orientation: 'vertical'
                elevation: 5
                pos_hint: {'center_x':.5, 'top': .6}
                adaptive_height: True
                size_hint_x: .6
                radius: [10,]
                padding: 20
                spacing: 20

