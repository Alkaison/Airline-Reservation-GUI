# PNR Screen
MDScreen:
    name: 'pnr screen'

    MDRectangleFlatButton:
        text: 'Go back to Home'
        ripple_scale: .8
        line_color: 'grey'
        text_color: 'grey'
        pos_hint: {'x':.1, 'top': .8}
        on_release: app.homescreenchanger('home screen')

    MDBoxLayout: 
        orientation: 'vertical'
        elevation: 5
        pos_hint: {'center_x':.5, 'top': .6}
        adaptive_height: True
        size_hint_x: .6
        # md_bg_color: 'lightgrey'
        line_color: 'black'
        radius: [10,]
        padding: 20
        spacing: 20
        
        MDTextField:
            id: pnr_number
            icon_left: 'ticket-confirmation-outline'
            hint_text: 'Enter your PNR number'
            helper_text_mode: 'on_error'
            mode: 'rectangle'
            line_color_normal: 'skyblue'
            line_color_focus: 'blue'
            pos_hint: {'center_x': 0.5}
            adaptive_height: True
            size_hint_x: .8
            padding: 10, 0
            text_color_focus: 'black'
            on_text: app.strvalidator('pnr', 'pnr', [self, False])
        MDFlatButton:
            text: 'Check'
            md_bg_color: 'lightblue'
            ripple_scale: .8
            pos_hint: {'center_x': 0.5}
            on_release: app.validate('pnr', [pnr_number, True])
            

