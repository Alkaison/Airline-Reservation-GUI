# PNR Screen
MDScreen:
    name: 'pnr screen'
    MDBoxLayout: 
        orientation: 'vertical'
        elevation: 5
        pos_hint: {'center_x':.5, 'center_y':.5}
        adaptive_height: True
        size_hint_x: .6
        # md_bg_color: 'lightgrey'
        line_color: 'black'
        radius: [10,]
        padding: 20
        spacing: 20
        MDTextField:
            hint_text: 'Enter your PNR number'
            mode: 'rectangle'
            line_color_normal: 'lightblue'
            line_color_focus: 'blue'
            pos_hint: {'center_x': 0.5}
            adaptive_height: True
            size_hint_x: .8
            padding: 10, 0
            text_color_focus: 'black'
        MDFlatButton:
            text: 'Check'
            md_bg_color: 'lightblue'
            ripple_scale: .8
            pos_hint: {'center_x': 0.5}
    MDRectangleFlatButton:
        text: 'Go back to Home'
        ripple_scale: .8
        line_color: 'grey'
        text_color: 'grey'
        pos_hint: {'top':.9, 'x':.1}
        on_release: app.homescreenchanger('home screen')