#UPI SCREEN
MDScreen:
    name: 'update wallet upi screen'
    md_bg_color: 'white'
    on_pre_enter: app.text_anim(type='update wallet upi')
    on_leave: 
        update_wallet_upi_amount.text = 'Rs 0'
        app.reset_screen('update wallet upi')

    MDScrollView:
        MDBoxLayout:
            size_hint_x: 1
            adaptive_height: True
            orientation: 'vertical'
            padding: 0, 40

            # Image Box
            MDFloatLayout:
                size_hint_x: 1
                adaptive_height: True
                md_bg_color: 'lightgrey'
                MDIconButton:
                    icon: 'arrow-left'
                    pos_hint: {'x': .03, 'center_y': .5}
                    on_release: 
                        app.userscreenchanger('back - home') 
                        app.reset_screen('update wallet upi')
                MDIcon:
                    icon: './assets/upi-icon.png'
                    font_size: 100
                    pos_hint: {'right': .9, 'center_y': .5}
            MDFloatLayout:
                size_hint_x: 1
                adaptive_height: True
                md_bg_color: 'blue'
                MDLabel:
                    id: update_wallet_upi_amount
                    text: ''
                    adaptive_height: True
                    size_hint_x: .3
                    font_size: 25
                    halign: 'center'
                    # pading: [40, 20]
                    # md_bg_color: 'black'
                    theme_text_color: 'Custom'
                    text_color: '#FFFFFF'
                    pos_hint: {'right': .9, 'center_y': .5}
                
            MDBoxLayout:
                orientation: 'vertical'
                adaptive_height: True
                size_hint_x: 1
                padding: [20, 20]
                spacing: 30
                MDTextField:
                    id: update_wallet_upi_pin
                    mode: 'rectangle'
                    icon_left: 'dialpad'
                    password: True
                    hint_text: 'Enter UPI PIN'
                    helper_text_mode: 'on_error'
                    mode: 'rectangle'
                    line_color_normal: 'lightblue'
                    line_color_focus: 'blue'
                    pos_hint: {'x': .2}
                    adaptive_height: True
                    size_hint_x: .6
                    padding: 10, 0
                    text_color_focus: 'black'
                    on_text : app.strvalidator('user wallet', 'pin', [self, update_wallet_upi_paybtn])

                MDRectangleFlatIconButton:
                    id: update_wallet_upi_paybtn
                    text: 'Confirm and Pay'
                    disabled: True
                    font_size: 20
                    adaptive_height: True
                    pos_hint: {'center_x': .5}
                    icon: 'fast-forward'
                    md_bg_color: 'blue'
                    text_color: 'white'
                    icon_color: 'white'
                    on_release: app.validate('update wallet upi', [self, update_wallet_upi_pin, update_wallet_upi_amount])


    
    # Notification Box
    NotificationBox:
        id: update_wallet_upi_notification_box
        MDLabel:
            id: update_wallet_upi_notification_text
            text: ''
            color: 'white'
            halign: 'center'
            adaptive_height: True
            opacity: 1
            elevation: 100
