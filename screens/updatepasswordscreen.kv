# Change Password

MDScreen:
    name: 'user password screen'
    spacing: 20
    # adaptive_height: True

    MDScrollView:
        MDBoxLayout:
            orientation: 'vertical'
            adaptive_height: True
            padding: 0, 30
            spacing: 30
            MDRectangleFlatButton:
                text: 'Go back to Home'
                ripple_scale: .8
                line_color: 'black'
                text_color: 'black'
                pos_hint: {'x': .15}
                on_release: app.userscreenchanger('back - home') 

            # Outer Box 
            Box3d: 
                orientation: 'vertical'
                pos_hint: {'center_x':.5}
                adaptive_height: True
                size_hint_x: .6
                md_bg_color: '#ECFFFD'
                padding: 20
                spacing: 20

                # Title
                MDLabel:
                    # id: login_head
                    text: 'Update Password'
                    font_style : 'H3'
                    adaptive_height: True
                    halign: 'center'
                
                # Email 
                MDLabel:
                    id: update_password_email
                    text: 'Click on Send Code to receive code on your email and then Verify the code Sent'
                    adaptive_height: True
                    size_hint_x: .8
                    pos_hint: {'center_x': .5}
                    halign: 'center'
                    valign: 'center'

                # Email code and button
                MDBoxLayout:
                    orientation: 'horizontal'
                    padding: 10, 0
                    spacing: 10
                    adaptive_height: True
                    size_hint_x: .5
                    pos_hint: {'x': .25}
                    # line_width: 2
                    # line_color: 'black'

                    MDTextField:
                        id: update_password_code_field
                        size_hint_x: .3
                        number: True
                        hint_text: 'Code'
                        adaptive_height: True
                        line_color_normal: 'lightblue'
                        line_color_focus: 'blue'
                        pos_hint: {'y': 0}
                        disabled : True
                        on_text: app.strvalidator('user details', 'code', [self, update_password_confirmcode_btn])
                    
                    MDFillRoundFlatButton:
                        id: update_password_sendcode_button
                        text: 'Send Code'
                        theme_text_color: "Custom"
                        md_bg_color: 'green'
                        text_color: 'white'
                        ripple_scale: .8
                        pos_hint: {'center_y': .5}
                        adaptive_height: True
                        on_release: app.button_handler('update-password-send-code', [self, update_password_code_field])

                # Confirm Code button
                MDFillRoundFlatButton:
                    id: update_password_confirmcode_btn
                    text: 'Confirm Email'
                    disabled: True
                    # radius: [10,]
                    theme_text_color: "Custom"
                    md_bg_color: 'blue'
                    text_color: 'white'
                    ripple_scale: .8
                    pos_hint: {'center_x': 0.5}
                    adaptive_height: True
                    elevation: 3
                    shadow_pos: 10
                    line_color: 'lightblue'
                    line_width: 1.5
                    shadow_color: 'lightgrey'
                    on_release: app.validate('update password code', [self, update_password_code_field, update_password_sendcode_button, update_password_email, update_password1, update_password2, update_password_icon1, update_password_icon2])
                
                # new password
                MDBoxLayout:
                    adaptive_height: True
                    pos_hint: {'x': .2}
                    size_hint_x: .72
                    height: update_password1.height
                    orientation: 'horizontal'
                    spacing: 10
                    MDTextField:
                        id: update_password1
                        icon_left: 'key'
                        hint_text: 'Enter new password'
                        password: True
                        disabled: True
                        helper_text_mode: 'on_error'
                        helper_text: 'Required'
                        mode: 'rectangle'
                        line_color_normal: 'lightblue'
                        line_color_focus: 'blue'
                        pos_hint: {'center_y': 0.5}
                        adaptive_height: True
                        size_hint_x: .7
                        padding: 10, 0
                        text_color_focus: 'black'
                        on_text: 
                            app.strvalidator('new password', 'password', [self, update_password2, update_password_btn])
                            update_password_icon1.icon = 'eye-off'
                            self.password = True
                    MDIconButton:
                        id: update_password_icon1
                        icon: "eye-off"
                        disabled: True
                        pos_hint: {"center_y": .5}
                        adaptive_size: True
                        on_release:
                            self.icon = "eye" if self.icon == "eye-off" else "eye-off"
                            update_password1.password = False if update_password1.password == True else True
                            update_password1.focus = True

                # confirm password
                MDBoxLayout:
                    adaptive_height: True
                    pos_hint: {'x': .2}
                    size_hint_x: .72
                    height: update_password2.height
                    orientation: 'horizontal'
                    spacing: 10
                    MDTextField:
                        id: update_password2
                        icon_left: 'key'
                        hint_text: 'Confirm new password'
                        password: True
                        disabled: True
                        helper_text_mode: 'on_error'
                        helper_text: 'Required'
                        mode: 'rectangle'
                        line_color_normal: 'lightblue'
                        line_color_focus: 'blue'
                        pos_hint: {'center_y': 0.5}
                        adaptive_height: True
                        size_hint_x: .7
                        padding: 10, 0
                        text_color_focus: 'black'
                        on_text: 
                            app.strvalidator('new password', 'password', [self, update_password1, update_password_btn])
                            update_password_icon2.icon = 'eye-off'
                            self.password = True
                    MDIconButton:
                        id: update_password_icon2
                        icon: "eye-off"
                        disabled: True
                        pos_hint: {"center_y": .5}
                        adaptive_size: True
                        on_release:
                            self.icon = "eye" if self.icon == "eye-off" else "eye-off"
                            update_password2.password = False if update_password2.password == True else True
                            update_password2.focus = True
                    
                # Update password button
                MDFillRoundFlatButton:
                    id: update_password_btn
                    text: 'Update New Password'
                    disabled: True
                    theme_text_color: "Custom"
                    md_bg_color: 'blue'
                    text_color: 'white'
                    ripple_scale: .8
                    pos_hint: {'center_x': 0.5}
                    adaptive_height: True
                    elevation: 3
                    shadow_pos: 10
                    line_color: 'lightblue'
                    line_width: 1.5
                    shadow_color: 'lightgrey'
                    on_release: app.validate('update password', [self, update_password1, update_password2])


    NotificationBox:
        id: update_password_notification_box
        NotificationText:
            id: update_password_notification_text