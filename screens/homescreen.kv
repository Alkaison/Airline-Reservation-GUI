# Home screen
MDScreen:
    name: 'home screen'
    # id: home_screen
    # text: 'Home screen'

    MDScrollView:
        do_scroll_y : True
        do_scroll_x : False
        bar_width : 5
        bar_color : 'blue'

        MDBoxLayout:
            adaptive_height : True
            orientation : 'vertical'
            spacing: 10
            padding: 10
            # Top box
            MDFloatLayout:
                adaptive_height: True
                # md_bg_color : 'lightgrey'

                # Top right box
                MDBoxLayout:
                    id: home_top_right_box
                    orientation: 'horizontal'
                    # md_bg_color: 'white'
                    adaptive_height: True
                    padding: 10
                    spacing: 16
                    size_hint_x: .2
                    pos_hint : {'right':.98, 'top':.8}
                    MDFlatButton:
                        id: loginbtn
                        text:"Login"
                        ripple_scale: 0.8
                        line_width: 1.2
                        text_color: 'black'
                        line_color: 'white'
                        md_bg_color: 'white'
                        on_release: app.homescreenchanger('login screen')
                    MDRectangleFlatButton:
                        id: signupbtn 
                        text : "SignUp"
                        ripple_scale: 0.8
                        line_width: 1.2
                        line_color: 'white'
                        text_color: 'white'
                        on_release: app.homescreenchanger('signup screen')
                
                # Logo box
                MDBoxLayout:
                    pos_hint : {'x': .01, 'y': -0.2}
                    adaptive_height: True
                    size_hint_x : .1
                    height: 100
                    orientation: 'horizontal'
                    Image:
                        source: './assets/airline.png'
                        fit_mode: 'contain'
                        size_hint: None, None
                        size: 120, 120
            
            #Center Box
            MDBoxLayout:
                adaptive_height: True
                # md_bg_color: 'lightgrey'
                orientation: 'vertical'
                spacing: 20
                padding: 20
                MDLabel:
                    text: "Welcome to the Eagle Airline App"
                    adaptive_size: True
                    halign: 'center'
                    pos_hint: {'center_x':.5}
                MDBoxLayout:
                    radius: [20]
                    line_width: 2
                    line_color: 'BE00FF'
                    adaptive_size: True
                    orientation: 'horizontal'
                    pos_hint: {'center_x': .5}
                    MDRectangleFlatIconButton:
                        id: showpnrbtn
                        padding: 16
                        icon: 'search-web'
                        icon_size: '28sp'
                        font_size: '20sp'
                        icon_color: 'white'
                        text: "Check PNR"
                        ripple_scale: 0.8
                        line_width: 0.01
                        text_color: 'white'
                        pos_hint: {'center_x': 0.5}
                        halign: 'right'
                        on_release: app.homescreenchanger('pnr screen')
                        adaptive_size: True
                MDLabel:
                    text: "Eagle Airline provides a user-friendly and efficient application designed to streamline the process of booking flight tickets. With a user-friendly interface, this application provides travelers with a hassle-free experience, allowing them to search for available flights, compare prices, and make reservations effortlessly. It offers a range of features, including real-time flight information, seat selection, and secure payment options, ensuring that passengers can make informed decisions and complete their bookings with confidence. Eagle Airline's Ticket Booking System is a valuable tool for both frequent flyers and occasional travelers, enhancing the convenience and accessibility of the flight booking process."
                    adaptive_height: True
                    size_hint_x: 1
                    pos_hint: {'center_x': 0.5}
                MDBoxLayout:
                    pos_hint: {'center_x':.5}
                    orientation: 'vertical'
                    md_bg_color: 'orange'
                    adaptive_size: True
                    padding: 10
                    spacing: 10
                    MDLabel:
                        text: 'Your latest booking'
                        adaptive_size: True
                        halign: 'center'
                    MDLabel:
                        text: 'Flight : 2241HC - Indigo'
                        adaptive_size: True
                        halign: 'center'
                    MDLabel:
                        text: 'Your latest booking'
                        adaptive_size: True
                        halign: 'center'
                    
            
            # End box
            MDBoxLayout: 
                orientation: 'horizontal'
                pos_hint: {'center_x':.5}
                adaptive_size: True
                # md_bg_color: 'lightgrey'
                padding: 20
                spacing: 20
                MDFlatButton:
                    text: 'My details'
                    md_bg_color: 'lightblue'
                    ripple_scale: .8
                MDFlatButton:
                    text: 'My bookings'
                    md_bg_color: 'lightblue'
                    ripple_scale: .8
                MDFlatButton:
                    text: 'Need support?'
                    md_bg_color: 'lightblue'
                    ripple_scale: .8
