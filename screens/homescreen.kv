# Home screen
MDScreen:
    name: 'home screen'
    id: home_screen
    text: 'Home screen'

    MDScrollView:
        do_scroll_y : True
        do_scroll_x : False
        bar_width : 5
        bar_color : 'blue'

        MDBoxLayout:
            adaptive_height : True
            orientation : 'vertical'
            spacing: 10
            padding: 10
            # Top box
            MDFloatLayout:
                adaptive_height: True
                # md_bg_color : 'lightgrey'

                # Top right box
                MDBoxLayout:
                    id: home_top_right_box
                    orientation: 'horizontal'
                    md_bg_color: 'white'
                    adaptive_height: True
                    padding: 10
                    spacing: 10
                    size_hint_x: .2
                    pos_hint : {'right':.98, 'top':.8}
                    MDFlatButton:
                        id: loginbtn
                        text:"Login"
                        ripple_scale: 0.8
                        md_bg_color: 'lightblue'
                        on_release: app.homescreenchanger('login screen')
                    MDRectangleFlatButton:
                        id: signupbtn 
                        text : "SignUp"
                        text_color : 'black'
                        ripple_scale: 0.8
                        line_color: 'blue'
                        text_color: 'blue'
                
                # Logo box
                MDBoxLayout:
                    pos_hint : {'x':.05, 'top':.8}
                    adaptive_height: True
                    size_hint_x : .3
                    padding: 30
                    orientation: 'vertical'
                    md_bg_color : 'lightblue'
                    MDLabel:
                        text: 'Logo'
                        pos_hint: {'center_x':.5}
                        halign: 'center'
                        adaptive_size: True
                        # md_bg_color: 'white'
            
            #Center Box
            MDBoxLayout:
                adaptive_height: True
                # md_bg_color: 'lightgrey'
                orientation: 'vertical'
                spacing: 20
                padding: 20
                MDLabel:
                    text: "Welcome to the Airline App"
                    adaptive_size: True
                    halign: 'center'
                    pos_hint: {'center_x':.5}
                MDRoundFlatIconButton:
                    id: showpnrbtn
                    padding: 20
                    line_width: 3
                    icon: 'search-web'
                    icon_size: '28sp'
                    font_size: self.icon_size - 10
                    text: "Check PNR"
                    radius: [10,]
                    ripple_scale: 0.8
                    line_color: '#BE00FF'
                    text_color: '#BE00FF'
                    pos_hint: {'center_x': 0.5}
                    halign: 'right'
                    on_release: app.homescreenchanger('pnr screen')
                    adaptive_size: True
                MDLabel:
                    text: 'lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt' *30
                    adaptive_height: True
                    size_hint_x: 1
                    pos_hint: {'center_x': 0.5}
                MDBoxLayout:
                    pos_hint: {'center_x':.5}
                    orientation: 'vertical'
                    md_bg_color: 'orange'
                    adaptive_size: True
                    padding: 10
                    spacing: 10
                    MDLabel:
                        text: 'Your latest booking'
                        adaptive_size: True
                        halign: 'center'
                    MDLabel:
                        text: 'Flight : 2241HC - Indigo'
                        adaptive_size: True
                        halign: 'center'
                    MDLabel:
                        text: 'Your latest booking'
                        adaptive_size: True
                        halign: 'center'
                    
            
            # End box
            MDBoxLayout: 
                orientation: 'horizontal'
                pos_hint: {'center_x':.5}
                adaptive_size: True
                # md_bg_color: 'lightgrey'
                padding: 20
                spacing: 20
                MDFlatButton:
                    text: 'My details'
                    md_bg_color: 'lightblue'
                    ripple_scale: .8
                MDFlatButton:
                    text: 'My bookings'
                    md_bg_color: 'lightblue'
                    ripple_scale: .8
                MDFlatButton:
                    text: 'Need support?'
                    md_bg_color: 'lightblue'
                    ripple_scale: .8
