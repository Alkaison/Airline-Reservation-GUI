# Login screen

MDScreen:
    name: 'forgotpassword screen'
    spacing: 20
    # adaptive_height: True

    MDScrollView:
        MDBoxLayout:
            orientation: 'vertical'
            adaptive_height: True
            padding: 0, 30
            spacing: 30
            MDRectangleFlatButton:
                text: 'Go back to Home'
                ripple_scale: .8
                line_color: 'white'
                text_color: 'white'
                pos_hint: {'x': .15}
                on_release: app.homescreenchanger('home screen') 

            # Outer Box 
            Box3d: 
                orientation: 'vertical'
                pos_hint: {'center_x':.5}
                adaptive_height: True
                size_hint_x: .6
                md_bg_color: '#ECFFFD'
                padding: 20
                spacing: 20

                # Title
                MDLabel:
                    # id: login_head
                    text: 'Forgot Password'
                    adaptive_height: True
                    halign: 'center'

                # Username
                MDTextField:
                    id: forgotusername
                    icon_left: 'account'
                    hint_text: 'Enter your username'
                    helper_text_mode: 'on_error'
                    mode: 'rectangle'
                    line_color_normal: 'lightblue'
                    line_color_focus: 'blue'
                    pos_hint: {'x': .2}
                    adaptive_height: True
                    size_hint_x: .6
                    padding: 10, 0
                    text_color_focus: 'black'
                    on_text: app.strvalidator('forgot', 'username', [self, sendcode_button, code_field, confirmcode_btn])

                # Email code button
                MDBoxLayout:
                    orientation: 'horizontal'
                    padding: 10, 0
                    spacing: 10
                    adaptive_height: True
                    size_hint_x: .5
                    pos_hint: {'x': .25}
                    # line_width: 2
                    # line_color: 'black'

                    MDTextField:
                        id: code_field
                        size_hint_x: .3
                        number: True
                        hint_text: 'Code'
                        adaptive_height: True
                        line_color_normal: 'lightblue'
                        line_color_focus: 'blue'
                        pos_hint: {'y': 0}
                        disabled : True
                        on_text: app.strvalidator('forgot', 'code', [self, confirmcode_btn])
                    
                    MDFillRoundFlatButton:
                        id: sendcode_button
                        text: 'Send Code'
                        theme_text_color: "Custom"
                        md_bg_color: 'green'
                        text_color: 'white'
                        ripple_scale: .8
                        pos_hint: {'center_y': .5}
                        adaptive_height: True
                        disabled: True
                        on_release: app.codebutton(self, [forgotusername, code_field, confirmcode_btn])

                # Login button
                MDFillRoundFlatButton:
                    id: confirmcode_btn
                    text: 'Confirm'
                    disabled: True
                    # radius: [10,]
                    theme_text_color: "Custom"
                    md_bg_color: 'blue'
                    text_color: 'white'
                    ripple_scale: .8
                    pos_hint: {'center_x': 0.5}
                    adaptive_height: True
                    elevation: 3
                    shadow_pos: 10
                    line_color: 'lightblue'
                    line_width: 1.5
                    shadow_color: 'lightgrey'
                    on_release: app.validate('forgot password', [code_field, self])
