# Wallet Screen

MDScreen:
    name: 'update wallet screen'
    spacing: 20
    # adaptive_height: True

    MDScrollView:
        MDBoxLayout:
            orientation: 'vertical'
            adaptive_height: True
            padding: 0, 30
            spacing: 30
            MDRectangleFlatButton:
                text: 'Go back to Home'
                ripple_scale: .8
                line_color: 'black'
                text_color: 'black'
                pos_hint: {'x': .15}
                on_release: 
                    app.userscreenchanger('back - home') 
                    # app.reset_screen('update password')

            # Outer Box 
            Box3d: 
                orientation: 'vertical'
                pos_hint: {'center_x':.5}
                adaptive_height: True
                size_hint_x: .6
                md_bg_color: '#ECFFFD'
                padding: 20
                spacing: 20

                # Title
                MDLabel:
                    text: 'Enter Amount you want to Add'
                    font_style : 'H3'
                    adaptive_height: True
                    halign: 'center'
                
                MDTextField:
                    id: update_wallet_amount
                    icon_left: 'currency-inr'
                    hint_text: 'Amount'
                    helper_text_mode: 'on_error'
                    mode: 'rectangle'
                    line_color_normal: 'lightblue'
                    line_color_focus: 'blue'
                    pos_hint: {'x': .2}
                    adaptive_height: True
                    size_hint_x: .6
                    padding: 10, 0
                    text_color_focus: 'black'
                    on_text : app.strvalidator('user wallet', 'amount', [self, update_wallet_pay])
                
                MDRectangleFlatIconButton:
                    id: update_wallet_pay
                    icon: 'credit-card-outline'
                    text: 'Pay Using UPI'
                    font_size: 16
                    disabled: True
                    pos_hint: {'center_x': .5}
                    adaptive_height: True
                    md_bg_color: 'blue'
                    text_color: 'white'
                    icon_color: 'white'
                    on_release: app.userscreenchanger('update wallet - upi')

                

    NotificationBox:
        id: update_wallet_notification_box
        NotificationText:
            id: update_wallet_notification_text