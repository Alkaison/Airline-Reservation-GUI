# Login screen 
MDScreen:
    name: 'login screen'
    spacing: 20
    # adaptive_height: True
    MDBoxLayout: 
        orientation: 'vertical'
        elevation: 5
        pos_hint: {'center_x':.5, 'top': .7}
        adaptive_height: True
        size_hint_x: .6
        # md_bg_color: 'lightgrey'
        line_color: 'black'
        radius: [10,]
        padding: 20
        spacing: 40
        MDTextField:
            id: loginusername
            hint_text: 'Enter your username'
            hint_text_mode: 'on_error'
            mode: 'rectangle'
            line_color_normal: 'lightblue'
            line_color_focus: 'blue'
            pos_hint: {'center_x': 0.5}
            adaptive_height: True
            size_hint_x: .8
            padding: 10, 0
            text_color_focus: 'black'
            on_text: app.strvalidator('login', [loginusername, loginpassword])
        MDTextField:
            id: loginpassword
            hint_text: 'Enter your password'
            password: True
            hint_text_mode: 'on_error'
            mode: 'rectangle'
            line_color_normal: 'lightblue'
            line_color_focus: 'blue'
            pos_hint: {'center_x': 0.5}
            adaptive_height: True
            size_hint_x: .8
            padding: 10, 0
            text_color_focus: 'black'
            on_text: app.strvalidator('login', [loginusername, loginpassword])
        MDFlatButton:
            text: 'Login'
            md_bg_color: 'lightblue'
            ripple_scale: .8
            pos_hint: {'center_x': 0.5}
            on_release: app.loginvalidate(loginusername, loginpassword)
    MDRectangleFlatButton:
        text: 'Go back to Home'
        ripple_scale: .8
        line_color: 'grey'
        text_color: 'grey'
        pos_hint: {'center_x': .5, 'top': .9}
        on_release: app.homescreenchanger('home screen') 

