# Login screen

MDScreen:
    name: 'login screen'
    spacing: 20
    # adaptive_height: True

    MDScrollView:
        MDBoxLayout:
            orientation: 'vertical'
            adaptive_height: True
            padding: 0, 30
            spacing: 30
            MDRectangleFlatButton:
                text: 'Go back to Home'
                ripple_scale: .8
                line_color: 'grey'
                text_color: 'grey'
                pos_hint: {'x': .15}
                on_release: app.homescreenchanger('home screen') 

            # Outer Box 
            Box3d: 
                orientation: 'vertical'
                # elevation: 3
                # shadow_pos: 5
                # shadow_color: 'lightgrey'
                pos_hint: {'center_x':.5}
                adaptive_height: True
                size_hint_x: .6
                md_bg_color: '#ECFFFD'
                # line_color: 'white'
                # radius: [10,]
                padding: 20
                spacing: 20

                # Title
                MDLabel:
                    id: login_head
                    text: 'LOGIN'
                    adaptive_height: True
                    halign: 'center'

                # Username
                MDTextField:
                    id: loginusername
                    icon_left: 'account'
                    hint_text: 'Enter your username'
                    helper_text_mode: 'on_error'
                    mode: 'rectangle'
                    line_color_normal: 'lightblue'
                    line_color_focus: 'blue'
                    pos_hint: {'x': .2}
                    adaptive_height: True
                    size_hint_x: .6
                    padding: 10, 0
                    text_color_focus: 'black'
                    on_text: app.strvalidator('login', 'username', self)

                # Password box
                MDBoxLayout:
                    adaptive_height: True
                    pos_hint: {'x': .2}
                    size_hint_x: .72
                    height: loginpassword.height
                    orientation: 'horizontal'
                    spacing: 10
                    MDTextField:
                        id: loginpassword
                        icon_left: 'key'
                        hint_text: 'Enter your password'
                        password: True
                        helper_text_mode: 'on_error'
                        helper_text: 'Required'
                        mode: 'rectangle'
                        line_color_normal: 'lightblue'
                        line_color_focus: 'blue'
                        pos_hint: {'center_y': 0.5}
                        adaptive_height: True
                        size_hint_x: .7
                        padding: 10, 0
                        text_color_focus: 'black'
                        on_text: 
                            app.strvalidator('login', 'password', self)
                            passwordicon.icon = 'eye-off'
                            self.password = True
                    MDIconButton:
                        id: passwordicon
                        icon: "eye-off"
                        pos_hint: {"center_y": .5}
                        adaptive_size: True
                        on_release:
                            self.icon = "eye" if self.icon == "eye-off" else "eye-off"
                            loginpassword.password = False if loginpassword.password == True else True
                            loginpassword.focus = True

                # Remember details
                MDBoxLayout:
                    orientation: 'horizontal'
                    pos_hint: {'center_x': .48}
                    # md_bg_color: 'lightgrey'
                    # size_hint_x: .6
                    spacing: 0
                    padding: 10, 0
                    adaptive_size: True
                    MDCheckbox:
                        id: logincheckbox
                        active: True
                        size_hint: None, None
                        size: "48dp", "48dp"
                        pos_hint: {'center_y': .5}
                    MDLabel:
                        text: 'Remember details'
                        pos_hint: {'center_y': .5}
                        color: 'black'
                        # size_hint_x: .8
                        adaptive_size: True

                # Login button
                MDFillRoundFlatButton:
                    text: 'Login'
                    # radius: [10,]
                    theme_text_color: "Custom"
                    md_bg_color: 'blue'
                    text_color: 'white'
                    ripple_scale: .8
                    pos_hint: {'center_x': 0.5}
                    adaptive_height: True
                    elevation: 3
                    shadow_pos: 10
                    line_color: 'lightblue'
                    line_width: 1.5
                    shadow_color: 'lightgrey'
                    on_release: app.validate('login', [loginusername, loginpassword, logincheckbox])
                    
                MDTextButton:
                    id : forgot_password
                    text: 'Forgot Password'
                    theme_text_color: "Custom"
                    text_color: 'grey'
                    # md_bg_color: 'white'
                    ripple_scale: .8
                    pos_hint: {'center_x': 0.5}
                    on_release: app.homescreenchanger('forgot screen')
                    # disabled: True
                    # opacity: 0

                MDTextButton:
                    text: 'New? Signup'
                    theme_text_color: "Custom"
                    text_color: 'blue'
                    # md_bg_color: 'white'
                    ripple_scale: .8
                    pos_hint: {'center_x': 0.5}
                    on_release: app.homescreenchanger('login-signup')
