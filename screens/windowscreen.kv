<Box3d>:
    elevation: 3
    shadow_pos: 5
    shadow_color: 'lightgrey'
    md_bg_color: 'white'
    line_color: 'white'
    radius: [10,]
<DialogContent>:
    md_bg_color: 'white'
    size_hint: (.5, None)
<NotificationBox>:
    orientation: 'horizontal'
    adaptive_height: True
    size_hint_x: .2
    pos_hint: {'center_x':.5, 'y':1.5}
    radius: [10,]
    elevation: 5
    shadow_pos: 5
    shadow_color: 'lightgrey'
    md_bg_color: 'black'
    padding: 10
    opacity: 0
<NotificationText@MDLabel>:
    text: ''
    color: 'white'
    halign: 'center'
    adaptive_height: True
    opacity: 1
    elevation: 100
# <MDLabel>:
#     theme_text_color: 'Custom'
#     text_color: 'black'
                

MDScreen:
    name: "main screen"
    
    MDBottomNavigation:
        panel_color: 0,0.5,0.5,0.4
        text_color_active: 1, 0, 0, 1
        text_color_inactive: 1, 0, 0, 0.4
        id: tab_navigator

        # Home Tab
        MDBottomNavigationItem:
            name: 'home'
            text: 'Home'
            icon: 'home'
            FitImage:
                id: home_gradient
                source: './assets/blue-grad.jpg'
                # elevation: 10
            # on_tab_press: app.show()

            # Notification Box
            NotificationBox:
                id: notification_box
                orientation: 'horizontal'
                adaptive_height: True
                size_hint_x: .2
                pos_hint: {'center_x':.5, 'y':1.5}
                radius: [10,]
                elevation: 3
                shadow_pos: 5
                shadow_color: 'lightgrey'
                md_bg_color: 'black'
                padding: 10
                opacity: 0
                MDLabel:
                    id: notification_text
                    text: 'Error invalid data....... Please try again'
                    color: 'white'
                    halign: 'center'
                    adaptive_height: True
                    opacity: 1
                    elevation: 100
            ScreenManager:
                id: homescreen_manager

        # Account Tab
        MDBottomNavigationItem:
            name: 'account'
            text: 'Account'
            icon: 'account'
            on_tab_release: app.tab_changer(self)
            FitImage:
                id: user_gradient
                source: './assets/blue-grad.jpg'
                # elevation: 10
            ScreenManager:
                id: userscreen_manager
